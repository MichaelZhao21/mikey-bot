{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "src",
		"resolveJsonModule": true,
		"outDir": "./build",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"]
}
